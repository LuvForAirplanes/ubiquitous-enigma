@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div style="display: flex; justify-content: center;">
    <div style="display: flex; flex-direction: column; justify-content: center;">
        <div class="ui segment">
            <form id="account" method="post" class="ui form">
                <h4>Use a local account to log in.</h4>
                <div asp-validation-summary="All" class="ui error message"></div>
                <div class="field">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" />
                    <span asp-validation-for="Input.Email" class="ui error message"></span>
                </div>
                <div class="field">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" />
                    <span asp-validation-for="Input.Password" class="ui error message"></span>
                </div>
                <div class="field">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="field">
                    <button type="submit" class="ui primary button">Log in</button>
                </div>
                <div class="field">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
